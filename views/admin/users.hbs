<h1>餐廳後台</h1>
<nav class='nav'>
  <a class='nav-link p-0' href='/admin/restaruants'>Restaurants</a>
  <p class='mx-2'>|</p>
  <a
    class='nav-link p-0'
    href='/admin/users'
    onclick='event.preventDefault()'
  >Users</a>
</nav>
<br />
<br />
<table class='table align-middle'>
  <thead class='thead-dark'>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>Name</th>
      <th scope='col'>Email</th>
      <th scope='col'>Role</th>
      <th scope='col'>#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope='row'>{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>
          {{#if this.isAdmin}}
            admin
          {{else}}
            user
          {{/if}}
        </td>
        <td>
          {{#if this.isAdmin}}
            <form
              action='/admin/users/{{this.id}}?_method=PATCH'
              method='POST'
              style='display: inline;'
            >
              <button type='submit' class='btn nav-link'>set as user</button>
            </form>
          {{else}}
            <form
              action='/admin/users/{{this.id}}?_method=PATCH'
              method='POST'
              style='display: inline;'
            >
              <button type='submit' class='btn nav-link'>set as admin</button>
            </form>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>