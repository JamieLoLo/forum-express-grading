<div class='row mb-5'>
  <div class='col-md-12 d-flex'>
    <div style='width: 30%; margin-right:50px;'>
      <img
        src='{{user.image}}'
        alt='avatar'
        style='width: 100%; height: 100%; border-radius: 50%; object-fit:cover;'
      />
    </div>
    <div style='width: 70%;'>
      <p>{{user.name}}</p>
      <p>{{user.email}}</p>
      <a href='/users/{{user.id}}/edit' class='btn btn-primary'>edit</a>

    </div>
  </div>
</div>